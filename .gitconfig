[user]
   name = Isa Goksu
   email = isa.goksu@gmail.com
[alias]
   ll = "!source ~/.githelpers && pretty_git_log"
   co = checkout
   st = status
   ci = !git add -A && git commit
   rh = reset --hard HEAD^
   rs = reset --soft HEAD^
   ps = push -u origin
   br = branch
[color]
   branch = auto
   diff = auto
   status = auto
[color "branch"]
   current = yellow
   local = blue
   remote = green
[color "diff"]
   meta = white
   frag = blue
   old = magenta
   new = green
[color "status"]
   added = green
   changed = blue
   untracked = magenta
[difftool "Kaleidoscope"]
   cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
   prompt = false
[diff]
   tool = Kaleidoscope
[core]
   editor = mvim -f
   quotepath = false
   excludesfile = /Users/isa/.gitignore
